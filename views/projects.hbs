<h3> Projects </h3>

<div class="row">
    <div class="col-9" style="padding: 20px;">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Customer</th>
                <th>Working Hours</th>
            </tr>
            </thead>
            <tbody>
            {{#each projectData}}
                <tr>
                    <th scope="row">{{this.projectId}}</th>
                    <td><a href="/projects/{{this.projectId}}">{{this.displayName}}</a></td>
                    <td>{{this.firstName}} {{this.lastName}}</td>
                    <td>25,6 hours</td>
                </tr>
            {{/each}}
            </tbody>
        </table>

    </div>
    <div class="col-3">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" data-toggle="modal" href="" data-target="#newProjectModal">Create New Project</a>
            </li>

        </ul>

    </div>

</div>

<div class="modal fade" id="newProjectModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="POST" action="projects/create">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create a New Project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" class="form-control" name="projectNameInput" placeholder="Project Name">
                    </div>
                    <div class="form-group">
                        <label for="customerSelect">Customer</label>
                        <select class="form-control" id="customerSelect" name="customerSelect">
                            <option>Choose a Customer</option>
                            {{#each customerData}}
                                <option value="{{this.id}}">{{this.firstName}} {{this.lastName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group">
                        <input id="fixedPriceInput" name="fixedPriceInput" placeholder="123.45" type="number"
                               class="form-control" aria-label="Fixed Price">
                        <span class="input-group-addon">Euro</span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Dismiss</button>
                        <input type="submit" class="btn btn-primary" value ="Create Project">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>